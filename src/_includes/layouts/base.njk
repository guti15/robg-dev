<!DOCTYPE html>
<html lang="en" class="dark-theme">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} - {% endif %}{{ metadata.title }}</title>
  <meta name="description" content="{% if description %}{{ description }}{% else %}{{ metadata.description }}{% endif %}">
  <meta name="author" content="{{ metadata.author.name }}">
  
  <!-- SEO Meta Tags -->
  <meta name="keywords" content="{{ metadata.keywords | join(', ') }}">
  <meta property="og:title" content="{% if title %}{{ title }} - {% endif %}{{ metadata.title }}">
  <meta property="og:description" content="{% if description %}{{ description }}{% else %}{{ metadata.description }}{% endif %}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
  <meta property="og:image" content="{{ metadata.url }}/assets/img/profile-og.jpg">
  
  <!-- Favicons -->
  <link rel="icon" type="image/png" sizes="32x32" href="/img/fav-icon-32.png">
  <link rel="icon" type="image/png" sizes="192x192" href="/img/fav-icon-192.png">
  <link rel="apple-touch-icon" sizes="120x120" href="/img/fav-icon-120.png">
  <meta name="msapplication-TileImage" content="/img/fav-icon-192.png">
  <meta name="msapplication-TileColor" content="#14213d">
  
  <!-- CSS -->
  <link rel="stylesheet" href="/assets/css/styles.css">
  <link rel="stylesheet" href="/assets/css/blog.css">
  
  <!-- Preload theme script to prevent flash of unstyled content -->
  <script>
    // Check for saved theme preference or default to dark
    const savedTheme = localStorage.getItem('theme');
    const theme = savedTheme || 'dark';
    
    // Apply theme immediately to prevent flash
    document.documentElement.classList.remove('light-theme', 'dark-theme');
    document.documentElement.classList.add(theme + '-theme');
  </script>
</head>
<body>
  <div class="site-container">
    <header class="site-header">
      <div class="container">
        <div class="header-content">
          <a href="/" class="site-logo">Robert Gutierrez</a>
          <nav class="site-nav">
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/pages/crypto">Crypto</a></li>
              <li><a href="/blog">Blog</a></li>
              <li>
                <button id="theme-toggle" aria-label="Toggle dark mode">
                  <span class="theme-toggle-icon light">‚òÄÔ∏è</span>
                  <span class="theme-toggle-icon dark">üåô</span>
                </button>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <main class="site-content">
      <div class="container">
        {{ content | safe }}
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div class="footer-info">
            <p>&copy; <span id="current-year"></span> {{ metadata.author.name }}. All rights reserved.</p>
          </div>
          <div class="footer-links">
            <a href="{{ metadata.social.linkedin }}" target="_blank" rel="noopener noreferrer">LinkedIn</a>
            <a href="/doc/RobertG_Resume.docx" target="_blank">Resume</a>
          </div>
        </div>
      </div>
    </footer>
  </div>

  <!-- JavaScript -->
  <script src="/assets/js/theme-switcher.js"></script>
  <script src="/assets/js/main.js"></script>
  <script src="/assets/js/carousel.js" defer></script>
  <script src="/assets/js/blog.js" defer></script>
</body>
</html>
